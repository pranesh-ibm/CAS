@{
    ViewData["Title"] = "Supplier Dashboard";
}

<h2 class="mb-4">Supplier Dashboard</h2>

<div class="row">

    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5>Total Orders</h5>
                <h3>@ViewBag.TotalOrders</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-dark bg-warning mb-3">
            <div class="card-body">
                <h5>Pending</h5>
                <h3>@ViewBag.PendingOrders</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5>Approved</h5>
                <h3>@ViewBag.ApprovedOrders</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5>Rejected</h5>
                <h3>@ViewBag.RejectedOrders</h3>
            </div>
        </div>
    </div>

</div>

<hr />

<div class="mt-3">
    <a class="btn btn-warning me-2" href="/Supplier/PendingOrders">
        View Pending Orders
    </a>

    <a class="btn btn-secondary" href="/Supplier/OrderHistory">
        View Order History
    </a>
</div>
