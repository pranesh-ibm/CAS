@model CAS.Models.ViewModel.PhysicianHomeViewModel

@{
    ViewData["Title"] = "Physician Home";
}

<div class="card border-0 shadow-lg mb-4">
    <div class="card-body p-4" style="background: linear-gradient(135deg, #0d6efd, #4f8bff); color: white; border-radius: .5rem;">
        <h2 class="mb-1">Welcome, @Model.UserName</h2>
        <p class="mb-0">Use the widget below to open your patients page.</p>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <a asp-action="ViewPatients" class="text-decoration-none text-dark">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h5 class="mb-1">View Patients</h5>
                        <p class="text-muted mb-0">See only your assigned patients</p>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-primary fs-6">@Model.Patients.Count</span>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>
