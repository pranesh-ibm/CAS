@model CAS.Models.ViewModel.PhysicianHomeViewModel

@{
    ViewData["Title"] = "View Patients";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">My Patients</h2>
    <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Assigned Patients</h5>
        <span class="badge bg-primary">@Model.Patients.Count</span>
    </div>
    <div class="card-body p-0">
        @if (!Model.Patients.Any())
        {
            <div class="p-4 text-muted">No patients are currently assigned to you.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.Patients)
                        {
                            <tr>
                                <td>@patient.PatientName</td>
                                <td>@patient.Gender</td>
                                <td>@patient.Phone</td>
                                <td>
                                    <span class="badge @(patient.PatientStatus == "Active" ? "bg-success" : "bg-secondary")">
                                        @patient.PatientStatus
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="PatientDetails" asp-route-id="@patient.PatientId" class="btn btn-outline-primary btn-sm">View Patient Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
