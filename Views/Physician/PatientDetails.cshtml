@model CAS.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Patient Details</h2>
    <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.PatientName</h4>
        <hr />
        <div class="row g-3">
            <div class="col-md-6"><strong>Date of Birth:</strong> @Model.Dob</div>
            <div class="col-md-6"><strong>Gender:</strong> @Model.Gender</div>
            <div class="col-md-6"><strong>Phone:</strong> @Model.Phone</div>
            <div class="col-md-6"><strong>Email:</strong> @Model.Email</div>
            <div class="col-12"><strong>Address:</strong> @Model.Address</div>
            <div class="col-12"><strong>Summary:</strong> @Model.Summary</div>
            <div class="col-12"><strong>Status:</strong> @Model.PatientStatus</div>
        </div>
    </div>
</div>
